# Backend Test Dockerfile for HR Portal
FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

# Set work directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies including test packages
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt \
    && pip install --no-cache-dir aiosqlite

# Copy application code
COPY . .

# Create non-root user for security
RUN adduser --disabled-password --gecos '' testuser \
    && chown -R testuser:testuser /app
USER testuser

# Default command runs pytest with coverage
CMD ["pytest", "tests/", "-v", "--cov=.", "--cov-report=term-missing", "--cov-report=html:coverage_html"]
